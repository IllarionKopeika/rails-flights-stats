<div class="flight-info mb-3">
  <div class="departure-info">
    <img src="https://flagcdn.com/<%= @flight_data[:departure_country_code].downcase %>.svg" alt="<%= @flight_data[:departure_country_code] %>">
    <div class="airport-time-info">
      <h4><strong><%= @flight_data[:departure_airport] %></strong></h4>
      <p><%= @flight_data[:departure_time] %></p>
    </div>
  </div>

  <div class="airplane-icon">
    <i class="fa-sharp fa-solid fa-plane-departure fa-xl"></i>
  </div>

  <div class="flight-number-duration-info">
    <p><%= @flight_data[:flight_number] %></p>
    <p><%= format_date(@flight_data[:departure_date]) %></p>
    <p><%= duration(@flight_data[:duration]) %></p>
  </div>

  <div class="airplane-icon">
    <i class="fa-sharp fa-solid fa-plane-arrival fa-xl"></i>
  </div>

  <div class="arrival-info">
    <div class="airport-time-info">
      <h4><strong><%= @flight_data[:arrival_airport] %></strong></h4>
      <p><%= @flight_data[:arrival_time] %></p>
    </div>
    <img src="https://flagcdn.com/<%= @flight_data[:arrival_country_code].downcase %>.svg" alt="<%= @flight_data[:arrival_country_code] %>">
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-6">
    <%= link_to t('.add_flight'), '#', class: 'btn btn-info w-100 text-white' %>
  </div>
</div>
