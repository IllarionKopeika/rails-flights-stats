<div class="row justify-content-center">
  <div class="col-6">
    <div class="custom-form">

      <h1 class="text-center mb-3"><%= t('.title') %></h1>

      <%= render 'shared/errors', object: @user %>

      <%= form_with model: @user, url: password_reset_path(params[:token]) do |f| %>
        <div class="mb-3">
          <%= f.password_field :password, placeholder: t('.password'), class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password_confirmation, placeholder: t('.password_confirmation'), class: 'form-control' %>
        </div>

        <%= f.submit t('.confirm'), class: 'btn btn-primary w-100 mb-3' %>
      <% end %>

    </div>
  </div>
</div
