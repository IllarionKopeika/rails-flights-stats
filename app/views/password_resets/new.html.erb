<div class="row justify-content-center">
  <div class="col-6">
    <div class="custom-form">

      <h1 class="text-center mb-3"><%= t('.title') %></h1>

      <%= form_with url: password_resets_path do |f| %>
        <div class="mb-3">
          <%= f.email_field :email_address, placeholder: t('.email_address'), class: 'form-control' %>
        </div>

        <%= f.submit t('.send_instructions'), class: 'btn btn-primary w-100 mb-3' %>
      <% end %>

      <div class="links d-flex">
        <%= link_to t('.log_in'), login_path %>
        <%= link_to t('.sign_up'), sign_up_path %>
      </div>

    </div>
  </div>
</div>
