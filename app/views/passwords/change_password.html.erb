<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8 col-sm-10 col-12">
    <div class="custom-form p-4">

      <h1 class="text-center mb-3"><%= t('.title') %></h1>

      <%= render 'shared/errors', object: Current.user %>

      <%= form_with model: Current.user, url: update_password_path do |f| %>
        <div class="mb-3">
          <%= f.password_field :password_challenge, placeholder: t('.current_password'), class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, placeholder: t('.new_password'), class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password_confirmation, placeholder: t('.password_confirmation'), class: 'form-control' %>
        </div>
        <%= f.submit t('.change_password'), class: 'btn btn-primary w-100 mb-3' %>
      <% end %>

    </div>
  </div>
</div>
