<% @airlines.first(3).each do |airline_logo, airline_code, airline_name, count| %>
  <div class="card-row d-flex justify-content-between align-items-center border-bottom">
    <p class="my-1 text-secondary"><strong><%= airline_code %></strong></p>
    <div class="d-flex justify-content-center align-items-center">
      <p class="my-1 pe-1"><%= airline_name %></p>
      <img class="my-1" src="<%= airline_logo %>" alt="<%= airline_name %>">
    </div>
    <p class="my-1 text-secondary"><strong><%= count %></strong></p>
  </div>
<% end %>

<div class="d-flex justify-content-center align-items-center mt-1">
  <%= link_to t('.show_all'), "#", data: { bs_toggle: 'modal', bs_target: "#airlinesModal" } %>
</div>

<div class="modal fade" id="airlinesModal" tabindex="-1" aria-labelledby="airlinesModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header pb-0" style="border-bottom: none;">
        <h4 class="modal-title fs-5" id="airlinesModalLabel"><%= t(title_key) %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% @airlines.each do |airline_logo, airline_code, airline_name, count| %>
          <div class="card-row d-flex justify-content-between align-items-center border-bottom">
            <p class="my-1 text-secondary"><strong><%= airline_code %></strong></p>
            <div class="d-flex justify-content-center align-items-center">
              <p class="my-1 pe-1"><%= airline_name %></p>
              <img class="my-1" src="<%= airline_logo %>" alt="<%= airline_name %>">
            </div>
            <p class="my-1 text-secondary"><strong><%= count %></strong></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
