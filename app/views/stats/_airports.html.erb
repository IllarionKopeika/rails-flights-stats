<% object.each do |country_code, airport_code, airport_name, count| %>
  <div class="card-row d-flex justify-content-between align-items-center border-bottom">
    <p class="m-0 text-secondary"><strong><%= airport_code %></strong></p>
    <div class="d-flex justify-content-center align-items-center">
      <p class="m-0 pe-1"><%= airport_name %></p>
      <img class="m-0" src="https://flagcdn.com/<%= country_code.downcase %>.svg" alt="<%= country_code %>">
    </div>
    <p class="text-secondary m-0"><strong><%= count %></strong></p>
  </div>
<% end %>
