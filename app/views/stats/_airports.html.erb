<% object.first(3).each do |airport_code, airport_name, count| %>
  <div class="card-row d-flex justify-content-between align-items-center border-bottom">
    <p class="my-1 text-secondary"><strong><%= airport_code %></strong></p>
    <p class="my-1 pe-1"><%= airport_name %></p>
    <p class="my-1 text-secondary"><strong><%= count %></strong></p>
  </div>
<% end %>

<div class="d-flex justify-content-center align-items-center mt-1">
  <%= link_to t('.show_all'), "#", data: { bs_toggle: 'modal', bs_target: "##{modal_id}" } %>
</div>

<div class="modal fade" id="<%= modal_id %>" tabindex="-1" aria-labelledby="<%= modal_id %>Label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header pb-0" style="border-bottom: none;">
        <h4 class="modal-title fs-5" id="<%= modal_id %>Label"><%= t(title_key) %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% object.each do |airport_code, airport_name, count| %>
          <div class="card-row d-flex justify-content-between align-items-center border-bottom">
            <p class="my-1 text-secondary"><strong><%= airport_code %></strong></p>
            <p class="my-1 pe-1"><%= airport_name %></p>
            <p class="my-1 text-secondary"><strong><%= count %></strong></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
