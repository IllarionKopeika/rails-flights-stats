<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8 col-sm-10 col-12">
    <div class="stats p-4">
      <h1 class="text-center mb-3"><%= t('.title') %></h1>

      <div class="stat-card mb-2 p-3">
        <h4 class="text-center mb-2 border-bottom border-primary"><%= t('.flights') %></h4>
        <div class="card-row d-flex justify-content-between align-items-center border-bottom">
          <p class="m-0 text-secondary"><strong><%= @longest_flight_min.departure_airport.code %> - <%= @longest_flight_min.arrival_airport.code %></strong></p>
          <p class="m-0"><%= t('.longest_flight_min') %></p>
          <p class="text-secondary m-0"><strong><%= duration(@longest_flight_min.duration) %></strong></p>
        </div>
        <div class="card-row d-flex justify-content-between align-items-center border-bottom">
          <p class="m-0 text-secondary"><strong><%= @shortest_flight_min.departure_airport.code %> - <%= @shortest_flight_min.arrival_airport.code %></strong></p>
          <p class="m-0"><%= t('.shortest_flight_min') %></p>
          <p class="text-secondary m-0"><strong><%= duration(@shortest_flight_min.duration) %></strong></p>
        </div>
        <div class="card-row d-flex justify-content-between align-items-center border-bottom">
          <p class="m-0 text-secondary"><strong><%= @longest_flight_km.departure_airport.code %> - <%= @longest_flight_km.arrival_airport.code %></strong></p>
          <p class="m-0"><%= t('.longest_flight_km') %></p>
          <p class="text-secondary m-0"><strong><%= @longest_flight_km.distance %> <%= t('.km') %></strong></p>
        </div>
        <div class="card-row d-flex justify-content-between align-items-center border-bottom">
          <p class="m-0 text-secondary"><strong><%= @shortest_flight_km.departure_airport.code %> - <%= @shortest_flight_km.arrival_airport.code %></strong></p>
          <p class="m-0"><%= t('.shortest_flight_km') %></p>
          <p class="text-secondary m-0"><strong><%= @shortest_flight_km.distance %> <%= t('.km') %></strong></p>
        </div>
      </div>

      <div class="stat-card mb-2 p-3">
        <h4 class="text-center mb-2 border-bottom border-primary"><%= t('.airports') %></h4>
        <%= render 'airports', object: @airports, modal_id: 'allAirportsModal', title_key: '.airports' %>
      </div>

      <div class="stat-card mb-2 p-3">
        <h4 class="text-center mb-2 border-bottom border-primary"><%= t('.departure_airports') %></h4>
        <%= render 'airports', object: @departure_airports, modal_id: 'departureAirportsModal', title_key: '.departure_airports' %>
      </div>

      <div class="stat-card mb-2 p-3">
        <h4 class="text-center mb-2 border-bottom border-primary"><%= t('.arrival_airports') %></h4>
        <%= render 'airports', object: @arrival_airports, modal_id: 'arrivalAirportsModal', title_key: '.arrival_airports' %>
      </div>

      <div class="stat-card mb-2 p-3">
        <h4 class="text-center mb-2 border-bottom border-primary"><%= t('.airlines') %></h4>
        <%= render 'airlines', title_key: '.airlines'  %>
      </div>

      <div class="stat-card mb-2 p-3">
        <h4 class="text-center mb-2 border-bottom border-primary"><%= t('.aircrafts') %></h4>
        <%= render 'aircrafts', title_key: '.aircrafts'  %>
      </div>

      <div class="stat-card mb-2 p-3">
        <h4 class="text-center mb-2 border-bottom border-primary"><%= t('.geo') %></h4>
      </div>

    </div>
  </div>
</div>
