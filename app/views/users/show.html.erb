<div class="row justify-content-center">
  <div class="col-lg-6 col-md-8 col-sm-10 col-12">
    <div class="profile p-4">
      <h1 class="text-center mb-3"><%= t('.title') %></h1>
      <div class="traveler-id mb-2 p-3">
        <h4 class="text-center mb-2"><%= t('.traveler_id') %></h4>
        <div class="d-flex justify-content-evenly align-items-center">
          <div>
            <%= image_tag('logo.png', alt: 'logo', width: 100, height: 100) %>
          </div>
          <div>
            <h6 class="my-1"><strong><%= t('.flights') %>: <%= @flights %></strong></h6>
            <h6 class="my-1"><strong><%= t('.distance') %>: <%= @distance %> <%= t('.km') %></strong></h6>
            <h6 class="my-1"><strong><%= t('.duration') %>: <%= @duration %></strong></h6>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
